<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <div class="container mt-5 mb-5">
        <div class="row g-4">
            <!-- Left Side: Map + Carousel + Campground Info -->
            <div class="col-lg-6">

                <!-- Map -->
                <div class="card shadow-sm mb-4 rounded-3">
                    <div class="card-header bg-primary text-white fw-semibold">
                        üìç Location
                    </div>
                    <div id="map" style="width: 100%; height: 300px;"></div>
                </div>

                <!-- Carousel -->
                <div class="card shadow-sm mb-4 rounded-3">
                    <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <% campground.images.forEach((img, i)=> { %>
                                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                                    <img crossorigin="anonymous" src="<%= img.url %>" class="d-block w-100 rounded-3" alt="">
                                </div>
                                <% }) %>
                        </div>
                        <% if(campground.images.length> 1) { %>
                            <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel"
                                data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel"
                                data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                            <% } %>
                    </div>
                </div>

                <!-- Campground Details -->
                <div class="card shadow-lg rounded-3">
                    <div class="card-body">
                        <h3 class="card-title fw-bold text-primary">
                            <%= campground.title %>
                        </h3>
                        <p class="card-text text-muted">
                            <%= campground.description %>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="bi bi-geo-alt text-danger"></i>
                            <%= campground.location %>
                        </li>
                        <li class="list-group-item"><i class="bi bi-person-circle"></i> Submitted by: <%=
                                campground.author.username %>
                        </li>
                        <li class="list-group-item"><i class="bi bi-cash-coin text-success"></i> $<%= campground.price
                                %>/night</li>
                    </ul>
                    <% if(currentUser && campground.author.equals(currentUser._id)) { %>
                        <div class="card-body d-flex justify-content-between">
                            <a class="btn btn-outline-info rounded-pill px-4"
                                href="/campgrounds/<%= campground._id %>/edit">‚úèÔ∏è Edit</a>
                            <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-outline-danger rounded-pill px-4">üóë Delete</button>
                            </form>
                        </div>
                        <% } %>
                            <div class="card-footer text-muted small">
                                ‚è≥ Updated 2 days ago
                            </div>
                </div>
            </div>

            <!-- Right Side: Reviews -->
            <div class="col-lg-6">
                <% if(currentUser) { %>
                    <div class="card shadow-sm mb-4 rounded-3">
                        <div class="card-header bg-success text-white fw-semibold">
                            ‚≠ê Leave a Review
                        </div>
                        <div class="card-body">
                            <form action="/campgrounds/<%= campground._id %>/reviews" class="mb-3 validated-form"
                                method="POST" novalidate>
                                <!-- Star Rating -->
                                <div class="mb-3 text-center">
                                    <fieldset class="starability-checkmark">
                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>

                                <!-- Review Text -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold" for="body">Your Review</label>
                                    <textarea class="form-control" name="review[body]" id="body" rows="3"
                                        required></textarea>
                                    <div class="valid-feedback">Looks good!</div>
                                </div>
                                <button class="btn btn-success w-100 rounded-pill">‚úÖ Submit</button>
                            </form>
                        </div>
                    </div>
                    <% } %>

                        <!-- Reviews List -->
                        <h4 class="fw-bold mb-3">üí¨ Reviews</h4>
                        <% for(let review of campground.reviews) { %>
                            <div class="card mb-3 shadow-sm rounded-3">
                                <div class="card-body">
                                    <h6 class="card-title fw-bold"><i class="bi bi-person-fill"></i>
                                        <%= review.author.username %>
                                    </h6>
                                    <p class="starability-result mb-1" data-rating="<%= review.rating  %>">‚≠ê <%=
                                            review.rating %> / 5</p>
                                    <p class="card-text">
                                        <%= review.body %>
                                    </p>
                                    <% if(currentUser && review.author.equals(currentUser._id)) { %>
                                        <form
                                            action="/campgrounds/<%= campground._id %>/reviews/<%= review.id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-outline-danger btn-sm rounded-pill">üóë
                                                Delete</button>
                                        </form>
                                        <% } %>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>

    <script>
        const maptilerApiKey = "<%= process.env.MAPTILER_API_KEY %>";
        const campground = <%- JSON.stringify(campground)%>;
    </script>
    <script src="/javascripts/showPageMap.js"></script>
<% layout('layouts/boilerplate') %>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-3">
                    <div class="card-header bg-success text-white text-center py-4">
                        <h2 class="mb-0 fw-bold">
                            <i class="bi bi-plus-circle"></i> Add a New Campground
                        </h2>
                    </div>
                    <div class="card-body p-4">
                        <form action="/campgrounds" method="POST" novalidate class="validated-form"
                            enctype="multipart/form-data">

                            <!-- Title -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="title">
                                    <i class="bi bi-tag"></i> Title
                                </label>
                                <input class="form-control" type="text" id="title" name="campground[title]"
                                    placeholder="Enter campground title" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Location -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="location">
                                    <i class="bi bi-geo-alt"></i> Location
                                </label>
                                <input class="form-control" type="text" id="location" name="campground[location]"
                                    placeholder="City, State or Coordinates" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Price -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="price">
                                    <i class="bi bi-cash-coin"></i> Campground Price
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text" id="price-label">$</span>
                                    <input type="number" step="0.01" min="0" class="form-control" id="price"
                                        name="campground[price]" placeholder="0.00" aria-label="price"
                                        aria-describedby="price-label" required>
                                </div>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Description -->
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="description">
                                    <i class="bi bi-card-text"></i> Description
                                </label>
                                <textarea class="form-control" id="description" name="campground[description]" rows="4"
                                    placeholder="Write a short description about your campground..."
                                    required></textarea>
                                <div class="valid-feedback">Looks good!</div>
                            </div>

                            <!-- Images -->
                            <div class="mb-4">
                                <label class="form-label fw-semibold" for="image">
                                    <i class="bi bi-image"></i> Upload Images
                                </label>
                                <input type="file" class="form-control" id="image" name="image" multiple>
                                <div class="form-text">You can select multiple images</div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid gap-2">
                                <button class="btn btn-success btn-lg fw-bold shadow-sm" type="submit">
                                    <i class="bi bi-check-circle"></i> Add Campground
                                </button>
                                <a href="/campgrounds" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Campgrounds
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>